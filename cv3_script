heat_template_version: 2016-04-08

description: v1.0.0 Template for network

parameters:
  NetName:
    description: NetName
    type: string
    default: network

  RouterName:
    description: RouterName
    type: string
    default: router

  PrivateSubnetsCidr:
    description: PrivateSubnetsCidr
    type: string
    label: CIDR
    default: 10.0.0.0/24
    #constraints:
    # -length: { min: 6, max: 8}


resources:
  Net:
    type: OS::Neutron::Net
    properties:
      admin_state_up: True
      name: { get_param: NetName }
      shared: False


  PrivateSubnet:
    type: OS::Neutron::Subnet
    properties:
      name: subnet
      cidr: { get_param: PrivateSubnetsCidr }
      dns_nameservers:
        - 8.8.8.8
        - 8.8.4.4
      enable_dhcp: True
      network: { get_resource: Net }